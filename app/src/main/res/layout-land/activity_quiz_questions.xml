<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/picture"
    tools:context="com.example.davidkd.bcs1.QuizQuestionsActivity"
    >


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="90dp"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/r4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="423dp"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:layout_below="@+id/rg"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/question" />


    </RadioGroup>


    <View
        android:id="@+id/colored_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/back_col"
        android:layout_marginTop="25dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:background="@drawable/bcslog"
        android:layout_above="@+id/rg"
        android:layout_alignParentStart="true">


    </ImageView>

    <Button
        android:id="@+id/movebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Move to next Question"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:background="@drawable/rounded_button"
        android:textColor="#ffff"/>

    <TextView
        android:text="Bcs Quiz"
        android:textSize="28dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/colored_bar"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        />

    <TextView
        android:id="@+id/question"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"

        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/imageView"
        />

    <TextView
        android:id="@+id/current_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_below="@+id/colored_bar"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="41dp"
        android:layout_marginTop="28dp" />
</RelativeLayout>
